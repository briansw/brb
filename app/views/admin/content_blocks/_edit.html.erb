<div class="content-block-wrapper <%= "is-deleted" if content_block_field.object.marked_for_destruction? %>" id="content-block-<%= content_block_field.object_id %>-wrapper">
    <div class="new-content-block-options">
      <%= f.new_content_block('New Text Block', 'TextBlock', 'large-button') %>
      <%= f.new_content_block('New Image Block', 'ImageBlock', 'large-button') %>
      <%= f.new_content_block('New Slideshow Block', 'SlideshowBlock', 'large-button') %>
      <%= f.new_content_block('New Video Block', 'VideoBlock', 'large-button') %>
      <%= f.new_content_block('New Interview Block', 'InterviewBlock', 'large-button') %>
    </div>

    <div id="content-block-<%= content_block_field.object_id %>" class="content-block">

      <%= render('admin/content_blocks/actions', content_block_id: content_block_field.object_id, content_block_field: content_block_field, existing: true, kind: content_block_field.object.block_type) %>

      <div class="content">
        
        <%= content_block_field.hidden_field :parent_type %>
        <%= content_block_field.hidden_field :parent_id %>
        <%= content_block_field.hidden_field :block_type %>
        <%= content_block_field.hidden_field :position, class: 'position' %>
        <%= content_block_field.destroy_field %>
        
        <%= render "admin/content_blocks/#{content_block_field.object.block_type.underscore}/edit", content_block_id: content_block_field.object_id, content_block_field: content_block_field %>

      </div>

    </div>
</div>