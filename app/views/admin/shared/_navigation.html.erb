<div class="header-module<%= ' logging-in' unless @current_user %>">
  <% if @current_user %>
      <div class="toolbar">
          <ul class="navigation project-links">
            <li><%= link_to('Home', admin_root_path, class: 'home') %></li>
            <li>
              <div class="dropdown-wrapper">
                  <div class="dropdown-selected"><%= display_dropdown_selected(controller_name) %></div>
                  <ul class="dropdown-list">
                    <% adminable_resources.each do |resource| %>
                      <% if resource[:sysop_only] %>
                        <%= content_tag(:li, display_dropdown_item(resource[:title].capitalize, resource[:path])) if @current_user.is_sysop? %>
                      <% else %>
                        <%= content_tag(:li, display_dropdown_item(resource[:title].capitalize, resource[:path])) %>
                      <% end %>

                    <% end %>
                  </ul>
              </div>
            </li>
          </ul>
          <ul class="navigation user-links">
            <li><%= link_to(@current_user.username, edit_admin_user_path(@current_user)) %></li>
            <li><%= link_to('Log out', admin_logout_path) %></li>
          </ul>
      </div>
  <% end %>
</div>
